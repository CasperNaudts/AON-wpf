<Window x:Class="SuperChatFramework.NewChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="NewChatWindow" Height="200" Width="270.861">
    <Grid>
        <ComboBox Name="SelectedUserComboBox" ItemsSource="{Binding users}" HorizontalAlignment="Center" Margin="10,10,0,0" VerticalAlignment="Top" Width="175"/>
        <Button Content="Create Chat" Name="CreateChatButton" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Click="CreateChatButton_Click"/>

    </Grid>
</Window>
